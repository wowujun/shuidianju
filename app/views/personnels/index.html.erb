<%=render 'head'%>
<%params[:left]="per"%>
<%if params[:left]=="per" %>
<%=render 'left'%>
<%end%>

<!-- main container -->
<div class="content">

  <div class="container-fluid">
    <div id="pad-wrapper">

      <!-- products table-->
      <!-- the script for the toggle all checkboxes from header is located in js/theme.js -->
      <div class="table-wrapper products-table">
        <div class="row-fluid head">
          <div class="span12">
            <h4>人事管理</h4>
          </div>
        </div>

        <div class="row-fluid filter-block" style="margin-top: 20px">
          <div class="pull-right" style="margin-bottom: -20px">
            <%=form_tag ({controller:"personnels",action:"index"}),method:"get"  %>
                      <%= text_field_tag(:search)%>
                  &nbsp;&nbsp;&nbsp;&nbsp;
                  <%= submit_tag "查找",class:"btn btn-primary-outline pull-right" %>
          </div>
        </div>
        <div class="row-fluid">
          <table class="table table-hover">
            <thead>
            <tr>
              <th class="span2">
              姓名
              </th>
              <th class="span2">
                <span class="line"></span>性别
              </th>
              <th class="span2">
                <span class="line"></span>生日
              </th>
              <th class="span3">
                <span class="line"></span>工作时间
              </th>
              <th class="span3">
                <span class="line"></span>学校
              </th>
              <th class="span3">
                <span class="line"></span>专业
              </th>
              <th class="span3">
                <span class="line"></span>学历
              </th>
              <th class="span3">
                <span class="line"></span>职称
              </th>
              <th class="span3">
                <span class="line"></span>操作
              </th>
            </tr>
            </thead>
            <tbody>
            <!-- row -->
            <% @personnels.each do |personnel| %>
                <tr   class="first">
                  <td><%= personnel.name %></td>
                  <%if personnel.sex==1%>
                  <td>
                    男
                  </td>
                      <%else%>
                      <td>
                        女
                      </td>
                      <%end%>
                  <td><%= personnel.birthday.strftime("%Y-%m-%d") %></td>
                  <td><%= personnel.worktime.strftime("%Y-%m-%d") %></td>
                  <td><%= personnel.professional %></td>
                  <td><%= personnel.degree %></td>
                  <td><%= personnel.school %></td>
                  <td><%= personnel.protitle %></td>
                  <td width="100px" align="center"><%= link_to "", edit_personnel_path(personnel),  class:"icon-pencil usricons", title: "编辑" %>&nbsp;&nbsp;
                    <%= link_to '', personnel, method: :delete, data: { confirm: '确认删除？' },class:"icon-trash usricons", title:"删除" %></td>
            </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <%= link_to ' 新建人员资料', new_personnel_path, class: "icon-plus btn-flat success new-product pull-right",'data-no-turbolink'=>true,height:"30" %>
      <!-- end products table -->


    </div>
  </div>
</div>









